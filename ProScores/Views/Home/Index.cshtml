@model ProScores.Models.ScoresPageViewModel
@{
    ViewBag.Title = "Pro Evo Scores";
}

<div class="col-md-4">
    <h2>Add Result</h2>
    @using (Html.BeginForm("AddResult", "Home", FormMethod.Post))
    {
        var playerListItems = new List<SelectListItem>();

        foreach (var player in Model.Players)
        {
            var item = new SelectListItem()
            {
                Value = player.Name,
                Text = player.Name
            };
            playerListItems.Add(item);
        }

        <table>
            <tr>
                <td>Home Player</td>
                <td>@Html.DropDownListFor(o => o.NewResult.PlayerHome, playerListItems, "Select Player") </td>
                <td>Away Player</td>
                <td>@Html.DropDownListFor(o => o.NewResult.PlayerAway, playerListItems, "Select Player") </td>
                <td rowspan="3"><input type="submit" name="submit" value="Add Result"></td>
            </tr>
            <tr>
                <td>Home Team</td>
                <td>@Html.EditorFor(o => o.NewResult.TeamHome)</td>
                <td>Away Team</td>
                <td>@Html.EditorFor(o => o.NewResult.TeamAway)</td>
            </tr>
            <tr>
                <td>Goals</td>
                <td>@Html.EditorFor(o => o.NewResult.GoalsHome)</td>
                <td>Goals</td>
                <td>@Html.EditorFor(o => o.NewResult.GoalsAway)</td>
            </tr>
            <tr>
                <td>Comments</td>
                <td>@Html.EditorFor(o => o.NewResult.Comments)</td>
            </tr>
        </table>
    }
    <h2>Rankings</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Played</th>
            <th>Win</th>
            <th>Draw</th>
            <th>Loss</th>
            <th>GD</th>
            <th>Points</th>
        </tr>
        @foreach (var item in Model.Stats)
        {
            <tr>
                <td>@item.PlayerName</td>
                <td>@item.GamesPlayed</td>
                <td>@item.Wins</td>
                <td>@item.Draws</td>
                <td>@item.Losses</td>
                <td>@item.GoalDifference</td>
                <td>@item.TotalPoints</td>
            </tr>
        }
    </table>
    <h2>Results</h2>
    <table>
        <tr>
            <th>Date</th>
            <th>Home Player</th>
            <th>Score</th>
            <th>Away Player</th>
            <th>Comments</th>
        </tr>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td style="text-align: left">@item.Date.ToShortDateString()</td>
                <td style="text-align: right">@item.PlayerHome (@item.TeamHome)</td>
                <td style="text-align: center">@item.GoalsHome-@item.GoalsAway
                <td style="text-align: left">@item.PlayerAway (@item.TeamAway)</td>
                <td style="text-align: left;">@item.Comments</td>
            </tr>
        }
    </table>
    @using (Html.BeginForm("DeleteResult", "Home", new { id = Model.LastResultId }, FormMethod.Post))
    {
        <input type="submit" name="submit" value="Delete Last Result">
    }
</div>